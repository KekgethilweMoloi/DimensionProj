@model IEnumerable<DimensionProj.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Register</h1>
<hr ? />


<table class="table-ver">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
			<th>
				<a asp-action="AddOrEdit" class="btn btn-outline-success">Employee</a>
			</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeNumber" >Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.EmployeeNumber" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
